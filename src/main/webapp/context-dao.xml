<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
					http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<bean id="genericDao" abstract="true">
		<property name="sqlDriver" value="${database.sqlDriver}" />
		<property name="dbURL" value="${database.url}" />
		<property name="username" value="${database.username}" />
		<property name="password" value="${database.password}" />
	</bean>
	
	<bean id="profileDao" parent="genericDao" class="ar.edu.utn.frba.proyecto.dao.ProfileDao">
		<property name="DATATABLE_NAME" value="PERFIL" />
		<property name="DATATABLE_ID" value="idPerfil" />
	</bean>

	<bean id="genericAbmDao" abstract="true" parent="genericDao" />

	<bean id="productDao" parent="genericAbmDao" class="ar.edu.utn.frba.proyecto.dao.ProductDao">
		<property name="DATATABLE_NAME" value="PRODUCTO" />
		<property name="DATATABLE_ID" value="idProducto" />
	</bean>

	<bean id="analisisDao" parent="genericAbmDao" class="ar.edu.utn.frba.proyecto.dao.AnalisisDao">
		<property name="DATATABLE_NAME" value="ANALISIS" />
		<property name="DATATABLE_ID" value="idAnalisis" />
	</bean>

	<bean id="userDao" parent="genericAbmDao" class="ar.edu.utn.frba.proyecto.dao.UserDao">
		<property name="DATATABLE_NAME" value="USUARIO" />
		<property name="DATATABLE_ID" value="idUsuario" />
	</bean>

</beans>
