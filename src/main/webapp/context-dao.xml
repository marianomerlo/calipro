<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
					http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<bean id="genericDao" abstract="true">
		<property name="sqlDriver" value="${database.sqlDriver}" />
		<property name="dbURL" value="${database.url}" />
		<property name="username" value="${database.username}" />
		<property name="password" value="${database.password}" />
	</bean>

	<bean id="productDao" parent="genericDao" class="ar.edu.utn.frba.proyecto.dao.ProductDao" />

	<bean id="analisisDao" parent="genericDao" class="ar.edu.utn.frba.proyecto.dao.AnalisisDao" />

</beans>
