<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
					http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<bean id="baseController" abstract="true">
		<property name="autoUpdateFrequencySeconds" value="${autoUpdateFrequencySeconds}" />
	</bean>

	<bean id="productController" parent="baseController" class="ar.edu.utn.frba.proyecto.controller.ProductController" scope="session">
		<property name="ITEM_NAME" value="Producto" />
		<property name="productDao" ref="productDao" />
	</bean>

	<bean id="analisisController" parent="baseController" class="ar.edu.utn.frba.proyecto.controller.AnalisisController" scope="session" >
		<property name="ITEM_NAME" value="Analisis" />
		<property name="analisisDao" ref="analisisDao" />
	</bean>

	<bean id="userController" class="ar.edu.utn.frba.proyecto.controller.UserController" scope="session" >
		<property name="ITEM_NAME" value="Usuario" />
		<property name="userDao" ref="userDao" />
		<property name="estadoController" ref="estadoController" />
		<property name="profileController" ref="profileController" />
	</bean>

	<bean id="profileController" class="ar.edu.utn.frba.proyecto.controller.ProfileController" scope="singleton">
		<property name="ITEM_NAME" value="Perfil" />
		<property name="profileDao" ref="profileDao" />
	</bean>

	<bean id="estadoController" class="ar.edu.utn.frba.proyecto.controller.EstadoController" scope="singleton">
		<property name="ITEM_NAME" value="Estado" />
		<property name="estadoDao" ref="estadoDao" />
	</bean>

	<bean id="sessionController" class="ar.edu.utn.frba.proyecto.controller.SessionController" scope="session">
		<property name="ITEM_NAME" value="Perfil" />
		<property name="userDao" ref="userDao" />
		<property name="profileController" ref="profileController" />
	</bean>

</beans>
