<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
					http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

<bean id="genericDao" abstract="true" class="ar.edu.utn.frba.proyecto.dao.GenericDao">
	<property name="sqlDriver" value="com.mysql.jdbc.Driver"/>
	<property name="dbURL" value="jdbc:mysql://localhost:3306/calipro"/>
	<property name="username" value="mariano"/>
	<property name="password" value="mariano"/>
</bean>

<bean id="productDao" parent="genericDao" class="ar.edu.utn.frba.proyecto.dao.ProductDao" />

</beans>
